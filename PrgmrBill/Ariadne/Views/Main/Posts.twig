{% include 'Header.twig' %}

{% include 'Main/Breadcrumbs.twig' %}

{% if posts %}
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th><a href="/f/{{ forumID }}/t/{{ threadID }}">{{ threadTitle|e }}</a></th>
            </tr>
        </thead>
        <tbody>
            {% for p in posts %} 
                <tr>                
                    <td class="postCreatedBlock">
                        <a href="/u/{{ p.createdBy }}"><img src="/Assets/Images/User/{{ p.createdByUserImage }}"></a>
                        <a href="/u/{{ p.createdBy }}">{{ p.createdByUser|e }}</a> &bull; {{ p.createdAt }}
                    </td>  
                    <td class="postBodyBlock">{{ p.body|e }}</td>
                </tr> 
            {% endfor %}
        </tbody>
    </table>
{% else %}
    No posts
{% endif %}

{% include 'Footer.twig' %}