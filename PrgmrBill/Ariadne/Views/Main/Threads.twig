{% include 'Header.twig' %}

<h1><a href="/f/{{ forumID }}">{{ forumTitle|e }}</a> > Threads</h1>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Title</th>
            <th>Replies</th>
        </tr>
    </thead>
    <tbody>
        {% for t in threads %} 
            <tr>
                <td><a href="/f/{{ forumID }}/t/{{ t.id }}">{{ t.title|e }}</a></td>
                <td>{{ t.postCount }}</td>  
            </tr> 
        {% endfor %}  
    </tbody>
</table>

{% include 'Footer.twig' %}