{% include 'Header.twig' %}

{% include 'Main/Breadcrumbs.twig' %}

{% if signedIn %}
    <a href="/f/{{ forumID }}/t/new"
       class="btn">New Thread</a>
{% endif %}

<table style="margin-top: 1em" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Title</th>
            <th>Replies</th>
        </tr>
    </thead>
    <tbody>
        {% for t in threads %} 
            <tr>
                <td><a href="/f/{{ forumID }}/t/{{ t.id }}">{{ t.title|e }}</a></td>
                <td>{{ t.postCount }}</td>  
            </tr> 
        {% endfor %}  
    </tbody>
</table>

{% include 'Footer.twig' %}